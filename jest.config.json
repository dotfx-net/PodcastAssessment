{
  "preset": "ts-jest",
  "moduleNameMapper": { "^@/(.*)$": "<rootDir>/src/$1" },
  "verbose": true,
  "projects": [
    {
      "displayName": "ui",
      "preset": "ts-jest",
      "roots": ["<rootDir>/src/test/features/podcast/ui"],
      "testEnvironment": "jsdom",
      "testMatch": ["**/*.test.tsx"],
      "setupFilesAfterEnv": ["<rootDir>/src/test/features/podcast/ui/setupTests.ts"],
      "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/src/$1",
        "\\.(css|less|scss|sass)$": "identity-obj-proxy"
      }
    },
    {
      "displayName": "domain",
      "preset": "ts-jest",
      "roots": ["<rootDir>/src/test/features/podcast/domain"],
      "testEnvironment": "node",
      "testMatch": ["**/*.test.ts"],
      "moduleNameMapper": { "^@/(.*)$": "<rootDir>/src/$1" }
    },
    {
      "displayName": "infrastructure",
      "preset": "ts-jest",
      "roots": ["<rootDir>/src/test/features/podcast/infrastructure"],
      "testEnvironment": "node",
      "testMatch": ["**/*.test.ts"],
      "moduleNameMapper": { "^@/(.*)$": "<rootDir>/src/$1" }
    }
  ]
}
